{
    "version": 2,
    "name": "my-project",
    "deployment": {
      "buildCommand": "composer install",
      "startCommand": "php -S 0.0.0.0:$PORT -t Public"
    },
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/Public/index.php"
      }
    ],
    "env": {
      "DIRECTORY" : "/Public/index.php"
    },
    "build": {
      "root": "/app/Public/index.php"
    }
    
  }
  